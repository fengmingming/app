        <shape>
            <stroke android:width="1dp" android:color="@color/def_border" />
            <solid android:color="@color/white"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/def_border" />
            <solid android:color="@color/white"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1dp" android:color="@color/def_border" />
            <solid android:color="@color/def_backgroud"/>
        </shape>
    </item>
</selector>