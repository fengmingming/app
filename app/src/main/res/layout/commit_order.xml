<?xml version="1.0" encoding="utf-8"?>
<com.app.commons.ReScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent" android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/border2"
            android:text="收货人信息"
            android:gravity="left" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:background="@drawable/border"
            android:id="@+id/address"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="详细地址："
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:layout_height="match_parent"
                    android:id="@+id/remark"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="收货人："
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:layout_height="match_parent"
                    android:id="@+id/receiver"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="手机号："
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:layout_height="match_parent"
                    android:id="@+id/mobile"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border2"
            android:text="购物车信息"
            android:gravity="left" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:background="@drawable/border">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/container"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@drawable/border"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="商品总额："/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/amount"
                        android:textColor="@color/def_fontcolor"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="优惠金额："/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/def_fontcolor"
                        android:layout_height="match_parent"
                        android:id="@+id/discountPrice"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="应付金额："/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/payPrice"
                        android:textColor="@color/def_fontcolor"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border2"
            android:text="支付方式"
            android:gravity="left" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:id="@+id/group">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/balance"
                android:text="余额支付"
                android:checked="true"
                android:button="@drawable/checkbox"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alipay"
                android:text="支付宝"
                android:button="@drawable/checkbox"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/wx"
                android:text="微信"
                android:button="@drawable/checkbox"/>
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border2"
            android:text="提货方式"
            android:gravity="left" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:id="@+id/group2">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sm"
                android:text="送货上门"
                android:checked="true"
                android:button="@drawable/checkbox"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/zt"
                android:text="到亭自提"
                android:button="@drawable/checkbox"/>
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:id="@+id/couponContainer"
            android:background="@drawable/border2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+使用优惠劵"
                android:textColor="@color/def_fontcolor"
                android:gravity="left" />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:id="@+id/couponName"
                android:textColor="@color/def_fontcolor"
                android:layout_height="wrap_content"
                />
        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:text="提交订单"
            android:id="@+id/submit"
            android:background="@drawable/btn"/>
    </LinearLayout>
</com.app.commons.ReScrollView>